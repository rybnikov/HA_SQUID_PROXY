# Security runner Dockerfile (lean)
FROM python:3.11-slim

# Install minimal system dependencies
# hadolint ignore=DL3008
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /repo

# Install pre-commit tooling
RUN pip install --no-cache-dir pre-commit==4.5.1

# Copy repository contents (including .git) so hooks have access to git metadata
COPY . .

CMD ["pre-commit", "run", "--all-files", "bandit"]
