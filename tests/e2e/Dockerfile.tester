FROM python:3.11-slim

WORKDIR /repo

# Install system dependencies for Playwright and testing
# hadolint ignore=DL3008
COPY pyproject.toml .
COPY tests/requirements-test.txt tests/requirements-test.txt
# hadolint ignore=DL3008
RUN set -eux; \
        apt-get update; \
        apt-get install -y --no-install-recommends \
            libnss3 \
            libnspr4 \
            libatk1.0-0 \
            libatk-bridge2.0-0 \
            libcups2 \
            libdrm2 \
            libxkbcommon0 \
            libxcomposite1 \
            libxdamage1 \
            libxext6 \
            libxfixes3 \
            libxrandr2 \
            libgbm1 \
            libpango-1.0-0 \
            libcairo2 \
            libasound2; \
        pip install --no-cache-dir .; \
        pip install --no-cache-dir -r tests/requirements-test.txt; \
        playwright install chromium; \
        rm -rf /var/lib/apt/lists/*

CMD ["pytest", "tests/e2e"]
